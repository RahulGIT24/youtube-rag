FROM python:3.12.3-slim

COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY . /app

ENV PATH="/app/.venv/bin:$PATH"

RUN uv sync --frozen --no-cache

